# Kafka配置
# Kafka服务器地址
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
# 数据捕获主题
KAFKA_CAPTURE_TOPIC=worldlora.capture.raw

# Playwright配置
# 是否使用无头模式（True/False）
PLAYWRIGHT_HEADLESS=True
# 页面加载超时时间（毫秒）
PLAYWRIGHT_TIMEOUT=30000

# 代理配置
# 是否启用代理（True/False）
USE_PROXY=False
# 代理服务器地址（例如：http://proxy.example.com:8080）
PROXY_SERVER=

# 反爬虫配置
# 是否启用反爬策略（True/False）
STEALTH_ENABLED=True
# 请求延迟时间（秒）
REQUEST_DELAY=2

# 爬虫通用配置
# 最大重试次数
MAX_RETRIES=3
# 重试退避因子
BACKOFF_FACTOR=1.5

# 调试配置
# 是否启用调试模式（True/False）
DEBUG=False
# 日志级别（DEBUG/INFO/WARNING/ERROR/CRITICAL）
LOG_LEVEL=INFO